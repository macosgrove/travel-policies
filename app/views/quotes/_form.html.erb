<%= form_with(model: quote, local: true) do |form| %>
  <% if flash[:error] %>
    <div class="error"><%= flash[:error] %></div>
  <% end %>

  <div class="field">
    <%= form.label :age, t(:age_of_traveller) %>
    <%= form.number_field :age, id: :quote_age %>
  </div>

  <div class="field">
    <%= form.label :trip_starts_at, t(:trip_starts_at) %>
    <%= form.datetime_field(
            :trip_starts_at,
            id: :quote_trip_starts_at,
            )
    %>
  </div>

  <div class="field">
    <%= form.label :trip_ends_at, t(:trip_ends_at) %>
    <%= form.datetime_field(
            :trip_ends_at,
            id: :quote_trip_ends_at,
            )
    %>
  </div>

  <div class="actions">
    <%= form.submit t(:get_quote) %>
  </div>
<% end %>
