<%= form_with(model: quote, local: true) do |form| %>
  <% if quote.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(quote.errors.count, "error") %> prohibited this quote from being saved:</h2>

      <ul>
      <% quote.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :age, t(:age_of_traveller) %>
    <%= form.number_field :age, id: :quote_age %>
  </div>

  <div class="field">
    <%= form.label :trip_length, t(:trip_length) %>
    <%= form.select(
            :trip_length,
            options_for_select([
                                   [t('date_ranges.up_to_7'), 0],
                                   [t('date_ranges._8_to_14'), 8],
                                   [t('date_ranges._15_to_21'), 15],
                                   [t('date_ranges.over_21'), 22]
                               ]),
            {},
            id: :trip_length,
            )
    %>
  </div>

  <div class="actions">
    <%= form.submit t(:get_quote) %>
  </div>
<% end %>
